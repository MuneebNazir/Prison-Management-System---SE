<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <div class="card">

                <div class="alert alert-danger" id="alertBox" style="display: none" role="alert"></div>

                <h3 class="card-header bg-warning text-white">Enter Criminal Record</h3>

                <div class="card-body">
                    <form method="post" action="/crimeRecordPost">
                        <!--   <dl class="row">
                               <dt class="col-12 col-sm-4">Enter Name:</dt>
                               <dd class="col col-sm col-md">

                                   <div class="form-row">

                                       <input type="name" class="form-control form-control-sm mr-1"
                                              id="exampleInputName3" name="prisonerName" placeholder="Prisoner Name">
                                   </div>

                           </dl>-->


                        <dl class="row">
                            <dt class="col-12 col-sm-4">Select Crime Danger level:</dt>
                            <dd class="col col-sm col-md">

                                <div class="form-row">
                                    <label class="sr-only" ></label>
                                    <select id="transferRequestStatus1" name="dangerLevel">
                                        <option value="1">Mildly Dangerous</option>
                                        <option value="2">Moderately Dangerous</option>
                                        <option value="3">Extremely Dangerous</option>
                                    </select>
                                </div>

                            </dd>
                        </dl>

                        <dl class="row">
                            <dt class="col-12 col-sm-4">Enter Prisoner ID:</dt>
                            <dd class="col col-sm col-md">

                                <div class="form-row">
                                    <label class="sr-only" for="exampleInputPrisonerID"></label>
                                    <input type="text" class="form-control form-control-sm mr-1"
                                           id="exampleInputPrisonerID" name="prisonerId" placeholder="Prisoner ID">
                                </div>

                            </dd>
                        </dl>


                        <dl class="row">
                            <dt class="col-12 col-sm-4">Enter the Date of Crime:</dt>
                            <dd class="col col-sm col-md">

                                <div class="form-row">
                                    <label class="sr-only"></label>
                                    <input type="date" class="form-control form-control-sm mr-1"
                                           id="transferDate3" name="crimeDate" placeholder="Crime Date">
                                </div>

                            </dd>
                        </dl>


                        <dl class="row">
                            <dt class="col-12 col-sm-4">Enter Crime:</dt>
                            <dd class="col col-sm col-md">

                                <div class="form-row">
                                    <label class="sr-only"></label>
                                    <input type="text" class="form-control form-control-sm mr-1"
                                           id="exampleInputCrimeName3" name="crime" placeholder="Crime">
                                </div>

                            </dd>
                        </dl>

                        <dl class="row">
                            <dt class="col-12 col-sm-4">Enter Crime Details:</dt>
                            <dd class="col col-sm col-md">

                                <div class="form-row">
                                    <label class="sr-only" for="exampleInputCrimeDetails"></label>
                                    <input type="text" class="form-control form-control-sm mr-1"
                                           id="exampleInputCrimeDetails" name="crimeDetails" placeholder="Crime Details(Optional)">
                                </div>

                            </dd>
                        </dl>


                        <div class="col-md-8">
                            <dd class="col col-sm col-md">

                                <div class="form-row">
                                    <button type="submit" class="btn btn-primary">Add Crime History</button>
                                </div>

                            </dd>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

